// Lower Reaches //

IF
   Global("Iatrap","AR0204",0)
   InMyArea(Player1)
   HasItem("HAMM03",Player1)
THEN
   RESPONSE #100
      SetInterrupt(FALSE)
      SetGlobal("Iatrap","AR0204",1)
      TriggerActivation("Tran0202",FALSE)
      DisplayString(Player1,14381)  // ~Trap Sprung~
      PlaySound("AMB_D04A")
      CreateCreatureObject("S!spideh",Player1,0,0,0) //
      SetInterrupt(TRUE)
END

