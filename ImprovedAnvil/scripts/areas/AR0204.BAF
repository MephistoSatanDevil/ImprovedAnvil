IF
   Global("Iatrap","AR0204",1)
   OR(2)
    Global("Iaexit","AR0204",0)
    Global("Iaexit","AR0204",2)
   Dead("S!spideh")
   CombatCounter(0)
THEN
   RESPONSE #100
      SetGlobal("Iatrap","AR0204",2)
      SetGlobal("Iaspidehdead","GLOBAL",1)
      TriggerActivation("Tran0202",TRUE)
      TriggerActivation("Tran0203",TRUE)
END

