IF
  Dead("S!trollk")
  Dead("S!trollq")
  Global("IaStopSpawns","AR1900",0)
THEN
  RESPONSE #100
    SetGlobal("IaStopSpawns","AR1900",1)
    SpawnPtDeactivate("SpawnPoint2")
    SpawnPtDeactivate("SpawnPoint7")
    SpawnPtDeactivate("SpawnPoint8")
END

