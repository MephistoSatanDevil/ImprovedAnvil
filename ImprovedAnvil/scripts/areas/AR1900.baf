//Druid Grove Area //////////////

IF
  Global("Iacreature","AR1900",0)
  Global("Iarenchanter","GLOBAL",1)
THEN
   RESPONSE #100
     SetGlobal("Iacreature","AR1900",1)
     CreateCreature("S!enchan",[263.1310],13) //
END

IF
  Global("Iacreature","AR1900",1)
  Global("Iarenchanter","GLOBAL",1)
  Dead("S!enchan")
THEN
   RESPONSE #100
     SetGlobal("Iarenchanter","GLOBAL",2)
END

